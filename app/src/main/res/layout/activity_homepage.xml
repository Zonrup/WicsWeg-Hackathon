<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Homepage"
    android:orientation="vertical"
    android:id="@+id/homepage_main_layout"
    android:weightSum="1">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:id="@+id/main_page_misc">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/button_settings"
        android:id="@+id/mainPageSettingsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="doMainSettingsButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="@string/button_other_actions"
        android:id="@+id/otherButton"
        android:onClick="doOtherButton"
        android:layout_gravity="end" />
</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/contacts_main_page">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jason"
            android:id="@+id/contact1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daryl"
            android:id="@+id/contact2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roxanne"
            android:id="@+id/contact3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Waez"
            android:id="@+id/contact4" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sos"
            android:padding="0dp"
            android:id="@+id/button7"
            android:layout_weight="0.09"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:src="@drawable/telephonejpg"
            android:padding="0dp"
            android:layout_weight=".33"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/hand"
            android:src="@drawable/hand"
            android:padding="0dp"
            android:layout_weight=".33"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/fries"
            android:src="@drawable/fries"
            android:padding="0dp"
            android:layout_weight=".33"
            android:scaleType="fitXY"/>
    </LinearLayout>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/send"
        android:src="@drawable/send"
        android:padding="0dp"
        android:scaleType="fitXY"/>

</LinearLayout>
